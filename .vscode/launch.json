{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask (linux/osx)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config.python.pythonPath}",
            "program": "${workspaceRoot}/manage.py",
            "args": [
                "devserver",
                "--log_dir=logdir"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "attach"
        }
    ]
}